# iso2dmg
iso2dmg () {
    if [ -z "$1" ] ; then
        echo "Error: ISOfile is Empty."
        echo "iso2dmg ISOfile Outfile"
    elif [ -z "$2" ] ; then
        echo "Error: Outfile is Empty."
        echo "iso2dmg ISOfile Outfile"
    else
        hdiutil convert -format UDRW -o $2 $1
    fi
}

